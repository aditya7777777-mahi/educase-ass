{
  "info": {
    "name": "School Management API",
    "description": "API endpoints for managing school data with proximity searches",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Seed Database",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/seed-database",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "seed-database"
          ]
        },
        "description": "Populate the database with sample school data for testing"
      },
      "response": []
    },
    {
      "name": "Add School",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Example School\",\n    \"address\": \"123 Example Street, City, Country\",\n    \"latitude\": 37.7749,\n    \"longitude\": -122.4194\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/addSchool",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "addSchool"
          ]
        },
        "description": "Add a new school to the database"
      },
      "response": []
    },
    {
      "name": "List Schools by Proximity",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/listSchools?latitude=37.7749&longitude=-122.4194",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "listSchools"
          ],
          "query": [
            {
              "key": "latitude",
              "value": "37.7749",
              "description": "User's latitude"
            },
            {
              "key": "longitude",
              "value": "-122.4194",
              "description": "User's longitude"
            }
          ]
        },
        "description": "List all schools sorted by proximity to the user's location"
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ]
}